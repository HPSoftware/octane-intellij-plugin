<idea-plugin version="2">
  <id>com.hpe.adm.octane.ideplugins.intellij</id>
  <name>Octane IntelliJ Plugin</name>
  <version>1.0-SNAPSHOT</version>
  <vendor email="support@hpe.com" url="https://www.hpe.com">Hewlett Packard Enterprise</vendor>
  <description>Octane IntelliJ Plugin</description>
  <idea-version since-build="162"/>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow factoryClass="com.hpe.adm.octane.ideplugins.intellij.ui.EntryPoint" anchor="bottom" icon="/images/octane-icon-13x13.png" secondary="true" id="ALM Octane"/>

    <projectService serviceInterface="com.hpe.adm.octane.ideplugins.intellij.settings.IdePersistentConnectionSettingsProvider"
                        serviceImplementation="com.hpe.adm.octane.ideplugins.intellij.settings.IdePersistentConnectionSettingsProvider"/>

    <projectService serviceInterface="com.hpe.adm.octane.ideplugins.intellij.settings.IdePluginPersistentState"
                    serviceImplementation="com.hpe.adm.octane.ideplugins.intellij.settings.IdePluginPersistentState"/>

    <projectConfigurable id="com.hpe.adm.octane.ideplugins.intellij.settings.ConnectionSettingsConfigurable"
                             displayName="ALM Octane Settings"
                             instance="com.hpe.adm.octane.ideplugins.intellij.settings.ConnectionSettingsConfigurable"/>

    <checkinHandlerFactory implementation="com.hpe.adm.octane.ideplugins.intellij.gitcommit.OctaneCheckinHandlerFactory" />
  </extensions>

  <application-components>
    <!-- Add your application customcomponents here -->
  </application-components>

  <project-components>
    <!-- Add your project customcomponents here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>